<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/title_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FE6138"
                android:textSize="22sp" />
        </FrameLayout>

        <include layout="@layout/one_greyline" />
    </LinearLayout>

    <com.goodfriends.personalchef.view.PullToRefreshListView.PullToRefreshListView
        android:id="@+id/more_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="51dp" >
    </com.goodfriends.personalchef.view.PullToRefreshListView.PullToRefreshListView>

    <Button
        android:id="@+id/more_yuyue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/chefdetail_yuyue_bg"
        android:drawableRight="@drawable/catelog_icon_targetright_grey"
        android:textColor="@color/white"
        android:textSize="24sp" />

</RelativeLayout>